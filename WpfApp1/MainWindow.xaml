<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Авторизация" Height="400" Width="300" MinHeight="400" MinWidth="350">
    <Grid Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Логин" HorizontalAlignment="Center" Margin="0, 3, 0, 3" Foreground="#FF37474F"/>
            <TextBox x:Name="Login_Input" Width="150" Height="30" Margin="0, 3, 0, 3">Sheo</TextBox>
            <Label Content="Пароль" HorizontalAlignment="Center" Margin="0, 3, 0, 3" Foreground="#FF37474F"/>
            <PasswordBox x:Name="Password_Input" Width="150" Height="30" Margin="0, 3, 0, 3" PasswordChar="*"/>
            <Button x:Name="Button_Input" Content="Войти" Width="100" Height="30" Margin="0, 6, 0, 3" Foreground="#FF37474F" Click="Button_Input_Click"/>
        </StackPanel>
    </Grid>
</Window>